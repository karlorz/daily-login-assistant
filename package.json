{
  "name": "daily-login-assistant",
  "version": "1.0.0",
  "description": "Enterprise-grade automated daily login assistant bot for headless Ubuntu containers/Docker",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test && npm run test:coverage",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit",
    "ci": "npm run lint && npm run typecheck && npm run test:all",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "automation",
    "browser-automation",
    "docker",
    "enterprise",
    "login-bot",
    "playwright",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "jest-environment-node": "^30.1.2",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.9",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@playwright/test": "^1.55.1",
    "playwright": "^1.55.1",
    "playwright-extra": "^4.3.6",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "dotenv": "^17.2.2",
    "joi": "^18.0.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karlorz/daily-login-assistant.git"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
