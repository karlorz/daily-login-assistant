{
  "name": "daily-login-assistant",
  "version": "1.0.0",
  "description": "Enterprise-grade automated daily login assistant bot for headless Ubuntu containers/Docker",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "build:tsc": "tsc",
    "dev": "bun --watch src/index.ts",
    "start": "bun dist/index.js",
    "start:node": "node dist/index.js",
    "test": "bun test",
    "test:jest": "jest",
    "test:watch": "bun test --watch",
    "test:coverage": "jest --coverage",
    "test:all": "bun run test && bun run test:coverage",
    "lint": "bunx oxlint",
    "lint:fix": "bunx oxlint --fix",
    "typecheck": "tsc --noEmit",
    "ci": "bun run lint && bun run typecheck && bun run test:all && bun run build",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "automation",
    "browser-automation",
    "docker",
    "enterprise",
    "login-bot",
    "playwright",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/inversify": "^2.0.33",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.5.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^30.1.3",
    "jest-environment-node": "^30.1.2",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.9",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@playwright/test": "^1.55.1",
    "dotenv": "^17.2.2",
    "inversify": "^7.10.1",
    "joi": "^18.0.1",
    "js-yaml": "^4.1.0",
    "playwright": "^1.55.1",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karlorz/daily-login-assistant.git"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
